set $mod Mod4

### Layout / Look & Feel ###

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:Inconsolata\ for\ Powerline 12
#font pango:fixed 16

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# default layout
workspace_layout tabbed

new_window pixel 1
new_float pixel 1

# pupups / dialogs should be floating
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# hide edge borders between tiles
# hide_edge_borders both

# colors
set $factv_brdr			#4c7899
set $factv_txt			#dedeee
set $finac_brdr			#333333
set $finac_txt			#dedeee
set $unfoc_brdr			#333333
set $unfoc_txt			#888888
set $urgnt_brdr			#994c4c

# class			border              background         text		indicator
client.focused          $factv_brdr	    $factv_brdr	       $factv_txt	#78994c
client.focused_inactive $finac_brdr	    $finac_brdr	       $finac_txt	#78994c
client.unfocused        $unfoc_brdr	    $unfoc_brdr	       $unfoc_txt	#78994c
client.urgent           $urgnt_brdr	    $urgnt_brdr	       $factv_txt	#78994c

### Shortcuts ###

# start a terminal
bindsym $mod+Mod1+T exec urxvt

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

### Navigate ###

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+b focus left
bindsym $mod+n focus down
bindsym $mod+p focus up
bindsym $mod+f focus right

# move focused window
bindsym $mod+Shift+b move left
bindsym $mod+Shift+n move down
bindsym $mod+Shift+p move up
bindsym $mod+Shift+f move right

# split in horizontal / vertical orientation
bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+r mode "resize"

# enter fullscreen mode for the focused container
bindsym $mod+m fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# bindsym $mod+s layout stacking

# toggle default / floating
bindsym $mod+Shift+space floating toggle

# toggle focus default / floating
bindsym $mod+space focus mode_toggle

# focus the parent / child container
bindsym $mod+a focus parent
#bindsym $mod+d focus child

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# extra keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle


